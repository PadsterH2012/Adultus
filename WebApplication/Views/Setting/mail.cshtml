@*{
    ViewBag.Title = "Mail";
}*@
<!DOCTYPE html>
@model PagedList.IPagedList<WebApplication.Models.HomeViewModel>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Ragthorn</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/album.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/navbar.css" rel="stylesheet">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/bootsnipp.css" rel="stylesheet">
    <link href="~/Content/pagedlist.css" rel="stylesheet">
    <link href="~/Content/Login-Form-Dark.css" rel="stylesheet" />
    <link href="~/Content/pagelayout.css" rel="stylesheet" />
    <link href="~/Content/styles.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/jquery")
</head>

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-2">
            <div class="btn-group">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    Mail <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Mail</a></li>
                    <li><a href="#">Contacts</a></li>
                    <li><a href="#">Tasks</a></li>
                </ul>
            </div>
        </div>
        <div class="col-sm-9 col-md-10">
            <!-- Split button -->
            <div class="btn-group">
                <button class="btn btn-default" type="button">
                    <div class="checkbox" style="margin: 0;">
                        <label>
                            <input type="checkbox">
                        </label>
                    </div>
                </button>
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                    <span class="caret"></span><span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">All</a></li>
                    <li><a href="#">None</a></li>
                    <li><a href="#">Read</a></li>
                    <li><a href="#">Unread</a></li>
                    <li><a href="#">Starred</a></li>
                    <li><a href="#">Unstarred</a></li>
                </ul>
            </div>
            <button title="Refresh" class="btn btn-default" type="button" data-toggle="tooltip">
                &nbsp;&nbsp;&nbsp;<span class="glyphicon glyphicon-refresh"></span>&nbsp;&nbsp;&nbsp;
            </button>
            <!-- Single button -->
            <div class="btn-group">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                    More <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="#">Mark all as read</a></li>
                    <li class="divider"></li>
                    <li class="text-center"><small class="text-muted">Select messages to see more actions</small></li>
                </ul>
            </div>
            <div class="pull-right">
                <span class="text-muted"><b>1</b>–<b>50</b> of <b>160</b></span>
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-default" type="button">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </button>
                    <button class="btn btn-default" type="button">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3 col-md-2">
            <a class="btn btn-danger btn-sm btn-block" role="button" href="#"><i class="glyphicon glyphicon-edit"></i> Compose</a>
            <hr>
            <ul class="nav nav-pills nav-stacked">
                <li class="active">
                    <a href="#"><span class="badge pull-right">32</span> Inbox </a>
                </li>
                <li><a href="#">Starred</a></li>
                <li><a href="#">Important</a></li>
                <li><a href="#">Sent Mail</a></li>
                <li><a href="#"><span class="badge pull-right">3</span>Drafts</a></li>
            </ul>
        </div>
        <div class="col-sm-9 col-md-10">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#home" data-toggle="tab">
                        <span class="glyphicon glyphicon-inbox">
                        </span>Primary
                    </a>
                </li>
                <li>
                    <a href="#profile" data-toggle="tab">
                        <span class="glyphicon glyphicon-user"></span>
                        Social
                    </a>
                </li>
                <li>
                    <a href="#messages" data-toggle="tab">
                        <span class="glyphicon glyphicon-tags"></span>
                        Promotions
                    </a>
                </li>
                <li>
                    <a href="#settings" data-toggle="tab">
                        <span class="glyphicon glyphicon-plus no-margin">
                        </span>
                    </a>
                </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane fade in active" id="home">
                    <div class="list-group">
                        <a class="list-group-item" href="#">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                </label>
                            </div>
                            <span class="glyphicon glyphicon-star-empty"></span><span class="name" style="min-width: 120px;&#10;                                display: inline-block;">Mark Otto</span> <span>Nice work on the lastest version</span>
                            <span class="text-muted" style="font-size: 11px;">- More content here</span> <span class="badge">12:10 AM</span> <span class="pull-right">
                                <span class="glyphicon glyphicon-paperclip">
                                </span>
                            </span>
                        </a><a class="list-group-item" href="#">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                </label>
                            </div>
                            <span class="glyphicon glyphicon-star-empty"></span><span class="name" style="min-width: 120px;&#10;                                        display: inline-block;">Jason Markus</span> <span>This is big title</span>
                            <span class="text-muted" style="font-size: 11px;">- I saw that you had..</span> <span class="badge">12:09 AM</span> <span class="pull-right">
                                <span class="glyphicon glyphicon-paperclip">
                                </span>
                            </span>
                        </a><a class="list-group-item read" href="#">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox">
                                </label>
                            </div>
                            <span class="glyphicon glyphicon-star"></span><span class="name" style="min-width: 120px;&#10;                                                display: inline-block;">Jane Patel</span> <span>This is big title</span>
                            <span class="text-muted" style="font-size: 11px;">- Hi hello how r u ?</span> <span class="badge">11:30 PM</span> <span class="pull-right">
                                <span class="glyphicon glyphicon-paperclip">
                                </span>
                            </span>
                        </a>
                    </div>
                </div>
                <div class="tab-pane fade in" id="profile">
                    <div class="list-group">
                        <div class="list-group-item">
                            <span class="text-center">This tab is empty.</span>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade in" id="messages">
                    ...
                </div>
                <div class="tab-pane fade in" id="settings">
                    This tab is empty.
                </div>
            </div>

            <div class="row-md-12">

                <div class="well">
                    <a href="http://www.bootply.com/XXmcPas41w">Edit on Bootply</a>
                </div>

            </div>
        </div>
    </div>
</div>
